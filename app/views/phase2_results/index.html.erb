<div class style= "margin:15px">
  <div>
    <h4>
      Phase 2:
      <small class="text-muted">Allocate Final Selection to each Participant</small>
    </h4>
    
    <button type="button" class="btn btn-default">
      <%= link_to "Back", phase2s_path %>
    </button>
    
    <button type="button" class="btn btn-default">
      <%= link_to "Download Excel", phase2_results_path(format: "xls") %>
    </button>
    
    <button type="button" class="btn btn-default">
      <%= link_to "Phase 1", phase1s_path %>
    </button>
  </div>
    
  <br>
  
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">NRIC</th>
        <th class="text-center">School</th>
        <th class="text-center">Class</th>
        <th class="text-center">Email</th>
        <th class="text-center">Phone</th>
        <th class="text-center">Final Selection</th>
      </tr>
    </thead>
  
    <tbody>
      <% @phase2_result.each do |p| %>
        <tr>
          <td class="text-center"><%= p.name %></td>
          <td class="text-center"><%= p.nric %></td>
          <td class="text-center"><%= p.school %></td>
          <td class="text-center"><%= p.class_name %></td>
          <td class="text-center"><%= p.email %></td>
          <td class="text-center"><%= p.phone %></td>
          <td class="text-center"><%= p.final_selection %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row text-right" style="margin:10px">
  <ul class="pagination">
    <% for page in 1..@pages+1%>
    <li class="<%= 'active' if @current_page==page %>"><a href="/phase2_results?page=<%=page%>"><%=page%></a></li>
    <% end %>
  </ul>
</div>